[user]
    name = Joel Eapen
    email = joelpeapen@protonmail.com
[init]
    defaultBranch = main
[core]
    editor = nvim
[color]
    ui = auto
[alias]
    amend = commit --amend --no-edit
    oneline = log --all --graph --decorate --oneline
[diff]
    tool = kitty
    guitool = kitty.gui
    colorMoved = default
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitten diff $LOCAL $REMOTE
