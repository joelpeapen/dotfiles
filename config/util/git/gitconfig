[user]
	email = joelpeapen@protonmail.com
	name = Joel Eapen
[core]
	editor = nvim
    pager = delta
[init]
	defaultBranch = main
[color]
	ui = auto
[alias]
    same = commit -a --amend --no-edit
	oneline = log --all --graph --decorate --oneline
	squash = "!f(){ git reset --soft HEAD~${1} && git commit --edit -m\"$(git log --format=%B --reverse HEAD..HEAD@{1})\"; };f"
[diff]
    tool = kitty
    guitool = kitty.gui
    colorMoved = default
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitty kitty +kitten diff $LOCAL $REMOTE
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    light = false
    features = theme
    true-color = always
    side-by-side = true
    diff-so-fancy = true
[delta "theme"]
    minus-style                   = syntax "#3a273a"
    minus-non-emph-style          = syntax "#3a273a"
    minus-emph-style              = syntax "#6b2e43"
    minus-empty-line-marker-style = syntax "#3a273a"
    line-numbers-minus-style      = syntax "#b55a67"
    line-numbers-plus-style       = syntax "#627259"
    line-numbers-zero-style       = syntax "#3b4261"
    plus-style                    = syntax "#273849"
    plus-non-emph-style           = syntax "#273849"
    plus-emph-style               = syntax "#305f6f"
    plus-empty-line-marker-style  = syntax "#273849"
