#! /usr/bin/env bash

URL="https://duckduckgo.com/?q="

if [[ $* == "--selection" ]]; then
    if [[ "$XDG_SESSION_TYPE" == "wayland" ]]; then
        QUERY=$(wl-paste --primary)
    else
        QUERY=$(xsel)
    fi
elif [[ $* == "--clipboard" ]]; then
    if [[ "$XDG_SESSION_TYPE" == "wayland" ]]; then
        QUERY=$(wl-paste)
    else
        QUERY=$(xsel -b)
    fi
else
    QUERY=$(printf ''| dmenu -p 'search' -fn 'FiraCode Nerd Font')
fi

if [ -n "$QUERY" ]; then
    firefox --private-window "${URL}${QUERY}" 2> /dev/null
    if [[ "$XDG_SESSION_TYPE" == "wayland" ]]; then
        swaymsg '[app_id="firefox"] focus'
    else
        i3-msg [class=firefox] focus
    fi
fi
